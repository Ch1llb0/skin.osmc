<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- favourites -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<defaultcontrol always="true">450</defaultcontrol>
	<controls>
		<!-- Window Background -->
		<include>WindowBackgroundImage</include>

		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Heading -->
			<include content="Time">
				<param name="heading">1036</param>
			</include>

			<!-- Image -->
			<control type="image">
				<left>150</left>
				<top>225</top>
				<width>405</width>
				<height>600</height>
				<texture>$INFO[Container(450).ListItem.Icon]</texture>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>!String.Contains(Container(450).ListItem.Icon,Default)</visible>
			</control>
			<control type="image">
				<left>150</left>
				<top>225</top>
				<width>405</width>
				<height>600</height>
				<texture>$INFO[Container(450).ListItem.Icon]</texture>
				<colordiffuse>$VAR[OverlayColorFO]</colordiffuse>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>String.Contains(Container(450).ListItem.Icon,Default)</visible>
			</control>

			<!-- List -->
			<control type="fixedlist" id="450">
				<left>750</left>
				<centertop>50%</centertop>
				<width>1050</width>
				<height>720</height>
				<onup>450</onup>
				<ondown>450</ondown>
				<onleft>60</onleft>
				<pagecontrol>60</pagecontrol>
				<focusposition>5</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout height="60" width="1050">
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>1050</width>
						<height>60</height>
						<font>Font36-light</font>
						<label>$VAR[Label1]</label>
						<textcolor>$VAR[TextColor2]</textcolor>
					</control>
				</itemlayout>

				<focusedlayout height="120" width="1050">
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>1050</width>
						<height>120</height>
						<font>Font72-bold</font>
						<label>$VAR[Label1]</label>
						<textcolor>$VAR[TextColor1]</textcolor>
						<scroll>True</scroll>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
					<control type="image">
						<width>1050</width>
						<height>120</height>
						<texture colordiffuse="$VAR[TextColor1]">$VAR[focus120]</texture>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
				</focusedlayout>

			</control>

			<!-- Scrollbar (list) -->
			<control type="scrollbar" id="60">
				<left>690</left>
				<centertop>50%</centertop>
				<width>20</width>
				<height>720</height>
				<onright>450</onright>
				<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
				<texturesliderbackground border="11,1,1,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="11,1,1,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="11,1,1,1" colordiffuse="$VAR[DialogColor1]">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib></textureslidernib>
				<textureslidernibfocus></textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
			</control>
			
			<!-- Submenu indicator -->
			<control type="group">
				<visible>!ControlGroup(9002).HasFocus + !Window.IsVisible(contextmenu) + !Skin.HasSetting(KioskMode)</visible>
				<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
				<animation effect="slide" time="200" start="-200,0" end="0,0">WindowOpen</animation>
				<animation effect="slide" time="200" start="0,0" end="-200,0">WindowClose</animation>
				<control type="image">
					<left>10</left>
					<centertop>50%</centertop>
					<width>30</width>
					<height>30</height>
					<texture colordiffuse="$VAR[DialogColor2]">sub-menu-left.png</texture>
				</control>
			</control>
			
		</control>
		
		<!-- Options -->
		<control type="group" id="9002">
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture colordiffuse="$VAR[DarkenColor]">dialogs/DialogTextBackground.png</texture>
				<animation effect="fade" start="0" end="100" time="200">Visible</animation>
				<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
				<visible>ControlGroup(9002).HasFocus</visible>
			</control>
			<control type="group">
				<left>-450</left>
				<top>0</top>
				<animation effect="slide" start="0,0" end="450,0" time="200" condition="ControlGroup(9002).HasFocus">Conditional</animation>
				<control type="button">
					<left>0</left>
					<top>0</top>
					<width>460</width>
					<height>1080</height>
					<texturefocus>noop</texturefocus>
				</control>

				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>450</width>
					<height>1080</height>
					<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3001">
					<left>20</left>
					<top>10</top> <!-- -10 because there are two spacers -->
					<width>410</width>
					<height>1040</height>
					<onleft>450</onleft>
					<onright>450</onright>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<defaultcontrol always="true">94</defaultcontrol>

					<include content="SideMenuAnimation">
						<param name="containerID">3001</param>
					</include>

					<!-- Scrollbars -->
					<control type="radiobutton" id="94">
						<label>31005</label>
						<height>52</height>
						<onclick>Skin.ToggleSetting(Scrollbars)</onclick>
						<selected>!Skin.HasSetting(Scrollbars)</selected>
					</control>

					<!-- Spacer -->
					<control type="image" id="80001">
						<left>0</left>
						<top>0</top>
						<width>410</width>
						<height>20</height>
						<texture>transparent.png</texture>
						<visible>Player.HasMedia + !Skin.HasSetting(SubMenuControls)</visible>
					</control>
				
					<!-- Heading -->
					<control type="label" id="80002">
						<width>410</width>
						<height>33</height>
						<align>center</align>
						<label>10114</label>
						<font>Font33</font>
						<textcolor>$VAR[TextColor2]</textcolor>
						<visible>Player.HasMedia + !Skin.HasSetting(SubMenuControls)</visible>
					</control>
					
					<!-- Spacer -->
					<control type="image" id="80003">
						<left>0</left>
						<top>0</top>
						<width>410</width>
						<height>10</height>
						<texture>transparent.png</texture>
						<visible>Player.HasMedia + !Skin.HasSetting(SubMenuControls)</visible>
					</control>
				
					<!-- Player controls -->
					<control type="grouplist" id="90000">
						<width>410</width>
						<height>60</height>
						<itemgap>0</itemgap>
						<orientation>horizontal</orientation>
						<align>center</align>
						<visible>Player.HasMedia + !Skin.HasSetting(SubMenuControls)</visible>
						
						<!-- Fullscreen toggle -->
						<control type="button" id="90001">
							<width>60</width>
							<height>60</height>
							<texturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDFullscreenNF.png</texturefocus>
							<texturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDFullscreenNF.png</texturenofocus>
							<onclick>Dialog.Close(favourites)</onclick>
							<onclick>Fullscreen</onclick>
						</control>

						<!-- Spacer -->
						<control type="image" id="80004">
							<left>0</left>
							<top>0</top>
							<width>7</width>
							<height>60</height>
							<texture>transparent.png</texture>
						</control>

						<!-- Skip Back -->
						<control type="button" id="90002">
							<width>9</width>
							<height>60</height>
							<texturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickBackwardEnd.png</texturefocus>
							<texturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDTrickBackwardEnd.png</texturenofocus>
							<onclick>PlayerControl(Previous)</onclick>
							<visible>Player.SeekEnabled</visible>
						</control>
						<!-- Rewind -->
						<control type="togglebutton" id="90003">
							<width>18</width>
							<height>60</height>
							<texturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickBackward.png</texturefocus>
							<texturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDTrickBackward.png</texturenofocus>
							<alttexturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickBackward.png</alttexturefocus>
							<alttexturenofocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickBackward.png</alttexturenofocus>
							<usealttexture>Control.HasFocus(90002)</usealttexture>
							<onclick>PlayerControl(Rewind)</onclick>
							<visible>Player.SeekEnabled</visible>
						</control>
						<!-- Tempo Down -->
						<control type="togglebutton" id="90004">
							<width>18</width>
							<height>60</height>
							<texturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickBackward.png</texturefocus>
							<texturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDTrickBackward.png</texturenofocus>
							<alttexturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickBackward.png</alttexturefocus>
							<alttexturenofocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickBackward.png</alttexturenofocus>
							<usealttexture>Control.HasFocus(90002) | Control.HasFocus(90003)</usealttexture>
							<onclick>PlayerControl(TempoDown)</onclick>
							<visible>Player.SeekEnabled</visible>
							<enable>Player.TempoEnabled</enable>
						</control>

						<!-- Spacer -->
						<control type="image" id="80005">
							<left>0</left>
							<top>0</top>
							<width>7</width>
							<height>60</height>
							<texture>transparent.png</texture>
						</control>
						
						<!-- Play/Pause -->
						<control type="togglebutton" id="90005">
							<width>60</width>
							<height>60</height>
							<texturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDPauseNF.png</texturefocus>
							<texturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDPauseNF.png</texturenofocus>
							<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding | Player.IsTempo</usealttexture>
							<alttexturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDPlayNF.png</alttexturefocus>
							<alttexturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDPlayNF.png</alttexturenofocus>
							<onclick>PlayerControl(Play)</onclick>
							<visible>Player.PauseEnabled</visible>
						</control>
						
						<!-- Stop -->
						<control type="button" id="90006">
							<width>60</width>
							<height>60</height>
							<texturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDStopNF.png</texturefocus>
							<texturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDStopNF.png</texturenofocus>
							<onclick>PlayerControl(Stop)</onclick>
						</control>

						<!-- Spacer -->
						<control type="image" id="80006">
							<left>0</left>
							<top>0</top>
							<width>7</width>
							<height>60</height>
							<texture>transparent.png</texture>
						</control>

						<!-- Tempo Up -->
						<control type="togglebutton" id="90007">
							<width>18</width>
							<height>60</height>
							<texturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickForward.png</texturefocus>
							<texturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDTrickForward.png</texturenofocus>
							<alttexturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickForward.png</alttexturefocus>
							<alttexturenofocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickForward.png</alttexturenofocus>
							<usealttexture>Control.HasFocus(90008) | Control.HasFocus(90009)</usealttexture>
							<onclick>PlayerControl(TempoUp)</onclick>
							<visible>Player.SeekEnabled</visible>
							<enable>Player.TempoEnabled</enable>
						</control>
						<!-- Fast Forward -->
						<control type="togglebutton" id="90008">
							<width>18</width>
							<height>60</height>
							<texturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickForward.png</texturefocus>
							<texturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDTrickForward.png</texturenofocus>
							<alttexturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickForward.png</alttexturefocus>
							<alttexturenofocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickForward.png</alttexturenofocus>
							<usealttexture>Control.HasFocus(90009)</usealttexture>
							<onclick>PlayerControl(Forward)</onclick>
							<visible>Player.SeekEnabled</visible>
						</control>
						<!-- Next -->
						<control type="button" id="90009">
							<width>9</width>
							<height>60</height>
							<texturefocus colordiffuse="$VAR[DialogColor1]">osd/OSDTrickForwardEnd.png</texturefocus>
							<texturenofocus colordiffuse="$VAR[DialogColor2]">osd/OSDTrickForwardEnd.png</texturenofocus>
							<onclick>PlayerControl(Next)</onclick>
							<visible>Player.SeekEnabled</visible>
						</control>
						
					</control>

				</control>
			</control>
		</control>

	</controls>

</window>