<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- osdvideosettings -->
	<defaultcontrol always="true">11</defaultcontrol>
	<include>DialogZoomAnimation</include>
	<zorder>0</zorder>
	
	<controls>

		<!-- Menu -->
		<control type="group">
			<left>150</left>
			<top>200</top>

			<!-- Background -->
			<control type="image">
				<width>1140</width>
				<height>680</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			</control>

			<!-- Heading label -->
			<control type="fadelabel" id="2">
				<left>260</left>
				<top>97</top>
				<width>248</width>
				<height>48</height>
				<font>Font33-bold</font>
				<textcolor>$VAR[TextColor1]</textcolor>
				<label>$VAR[VideoPlayerChannelNumber]</label>
			</control>

			<!-- Date label -->
			<control type="fadelabel" id="2">
				<left>260</left>
				<top>149</top>
				<width>248</width>
				<height>36</height>
				<font>Font33-light</font>
				<textcolor>$VAR[TextColor1]</textcolor>
				<label>$INFO[Container(11).ListItem.StartDate]</label>
			</control>
			
			<!-- Icon -->
			<control type="image">
				<left>20</left>
				<top>31</top>
				<width>220</width>
				<height>220</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>$VAR[VideoPlayerIcon]</texture>
			</control>
			
			<!-- Episode Information -->
			<control type="group">
				<left>20</left>
				<top>282</top>
				<width>488</width>
				<height>378</height>
				<control type="textbox">
					<align>left</align>
					<font>Font27</font>
					<label>$VAR[PVRDescriptionDialogGuide]</label>
					<textcolor>$VAR[TextColor1]</textcolor>
					<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
					<visible>Skin.String(PlotFont,S) | Skin.String(PlotFont,S light)</visible>
				</control>
				<control type="textbox">
					<align>left</align>
					<font>Font30</font>
					<label>$VAR[PVRDescriptionDialogGuide]</label>
					<textcolor>$VAR[TextColor1]</textcolor>
					<autoscroll delay="5000" time="1300" repeat="10000">true</autoscroll>
					<visible>Skin.String(PlotFont,M) | Skin.String(PlotFont,M light)</visible>
				</control>
				<control type="textbox">
					<align>left</align>
					<font>Font33</font>
					<label>$VAR[PVRDescriptionDialogGuide]</label>
					<textcolor>$VAR[TextColor1]</textcolor>
					<autoscroll delay="5000" time="1200" repeat="10000">true</autoscroll>
					<visible>Skin.String(PlotFont,L) | Skin.String(PlotFont,XL) | Skin.String(PlotFont,L light) | Skin.String(PlotFont,XL light)</visible>
				</control>
			</control>

			<!-- List -->
			<control type="list" id="11">
				<left>563</left>
				<top>34</top>
				<width>563</width>
				<height>612</height>
				<onleft>60</onleft>
				<pagecontrol>60</pagecontrol>
				<onup>11</onup>
				<ondown>11</ondown>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="563" height="51">

					<!-- Start time -->
					<control type="label">
						<top>2</top>
						<width>140</width>
						<height>51</height>
						<font>Font27</font>
						<align>left</align>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>160</left>
						<width>365</width>
						<height>51</height>
						<font>Font33</font>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<right>4</right>
						<top>14</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<right>0</right>
						<top>10</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>[ListItem.HasTimer | ListItem.HasTimerSchedule] + !ListItem.IsRecording</visible>
					</control>

				</itemlayout>

				<focusedlayout width="563" height="51">

					<!-- Start time -->
					<control type="label">
						<top>2</top>
						<width>140</width>
						<height>51</height>
						<font>Font30-bold</font>
						<align>left</align>
						<textcolor>$VAR[TextColor1]</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>

					<!-- Program name -->
					<control type="fadelabel">
						<left>160</left>
						<width>365</width>
						<height>51</height>
						<font>Font42</font>
						<textcolor>$VAR[TextColor1]</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>

					<!-- Highlighting -->
					<control type="image">
						<top>6</top>
						<width>563</width>
						<height>51</height>
						<texture colordiffuse="$VAR[TextColor1]">$VAR[focus52]</texture>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>
					
					<!-- Recording image -->
					<control type="image">
						<right>4</right>
						<top>14</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<right>0</right>
						<top>10</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>[ListItem.HasTimer | ListItem.HasTimerSchedule] + !ListItem.IsRecording</visible>
					</control>

				</focusedlayout>

			</control>

			<!-- Scrollbar (list) -->
			<control type="scrollbar" id="60">
				<left>513</left>
				<top>54</top>
				<width>20</width>
				<height>572</height>
				<onright>11</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
				<texturesliderbackground border="11,1,1,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="11,1,1,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="11,1,1,1" colordiffuse="$VAR[DialogColor1]">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib></textureslidernib>
				<textureslidernibfocus></textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
			</control>

		</control>

	</controls>

</window>
